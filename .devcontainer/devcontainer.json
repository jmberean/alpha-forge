{
  "name": "AI Agent Sandbox",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "Google.gemini-code-assist"
      ]
    }
  },
  "mounts": [
    // FIX: Claude stores auth in .claude, not .config
    "source=claude-data,target=/home/node/.claude,type=volume",
    // FIX: Gemini stores auth in .gemini
    "source=gemini-data,target=/home/node/.gemini,type=volume"
  ],
  "remoteUser": "node"
}