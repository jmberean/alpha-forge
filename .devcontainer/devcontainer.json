{
  "name": "AlphaForge Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "ms-python.python"
      ]
    }
  },
  "mounts": [
    "source=claude-code-auth,target=/home/vscode/.claude,type=volume"
  ],
  "postStartCommand": "sudo chown -R vscode:vscode /home/vscode/.claude",
  "postCreateCommand": "pip install -e '.[dev]' && cd frontend && npm install",
  "remoteUser": "vscode"
}